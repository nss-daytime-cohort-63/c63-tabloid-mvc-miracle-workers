@model IEnumerable<TabloidMVC.Models.Comment>

@{
    ViewData["Title"] = "Index";
}
@if (ViewBag.PostTitle != null)
{
    <h1>@ViewBag.PostTitle</h1>

    <p>
        <a class="btn btn-primary" asp-action="Create" asp-route-postId="@ViewBag.PostId">New Comment</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Subject)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Content)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreateDateTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserProfile.FullName)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Subject)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Content)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreateDateTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserProfile.FullName)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-area="" asp-controller="Post" asp-action="Details" asp-route-id="@ViewBag.PostId" class="btn btn-outline-primary mx-1" title="Back To Post">
        <i class="fas fa-times"></i>
    </a>
}
else
{
    <h2>No Comments</h2>
    <a asp-area="" asp-controller="Post" asp-action="Index" class="btn btn-outline-primary mx-1" title="Back To Posts">
        <i class="fas fa-times"></i>
    </a>
}
