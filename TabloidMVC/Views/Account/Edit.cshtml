@model TabloidMVC.Models.ViewModels.UserProfileTypeVM

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>UserProfile</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                
                <input asp-for="user.Id" type="hidden" class="form-control" />
                
            </div>
            <div class="form-group">
                <label asp-for="user.FirstName" class="control-label"></label>
                <input asp-for="user.FirstName"  readonly class="form-control" />
                <span asp-validation-for="user.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="user.LastName" class="control-label"></label>
                <input asp-for="user.LastName" readonly class="form-control" />
                <span asp-validation-for="user.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="user.DisplayName" class="control-label"></label>
                <input asp-for="user.DisplayName" readonly class="form-control" />
                <span asp-validation-for="user.DisplayName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="user.Email" class="control-label"></label>
                <input asp-for="user.Email" readonly class="form-control" />
                <span asp-validation-for="user.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="user.CreateDateTime" class="control-label"></label>
                <input asp-for="user.CreateDateTime" readonly class="form-control" />
                <span asp-validation-for="user.CreateDateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="user.ImageLocation" class="control-label"></label>
                <input asp-for="user.ImageLocation" readonly class="form-control" />
                <span asp-validation-for="user.ImageLocation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="user.UserTypeId" class="control-label"></label>
                <select asp-for="user.UserTypeId" class="form-control">
                                          

                @foreach (UserType type in Model.roleTypes)
                {
                    if(Model.user.UserTypeId == type.Id)
                    {
                        <option value="@type.Id" default> @type.Name</option>
                    }
                    else
                    {
                        <option value="@type.Id">@type.Name</option>
                    }

                }</select>
                <span asp-validation-for="user.UserTypeId" class="text-danger"></span>
            </div>
            <div></div>
            <div class="form-group">
                <label asp-for="user.FullName" class="control-label"></label>

                <input asp-for="user.FullName" readonly class="form-control" />
                <span asp-validation-for="user.FullName" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="user.ActiveFlag" /> Active
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
